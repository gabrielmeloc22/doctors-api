{
    "name": "api",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf dist",
        "dev": "nodemon --exec \"tsx --env-file=.env.local ./src/index.ts\" -e .ts",
        "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
        "start": "tsx --env-file=.env.local ./src/index.ts",
        "test": "vitest",
        "db:generate": "dotenv -- drizzle-kit generate",
        "db:migrate": "dotenv -- drizzle-kit migrate"
    },
    "dependencies": {
        "body-parser": "^1.20.3",
        "cors": "^2.8.5",
        "drizzle-orm": "^0.38.2",
        "express": "^4.21.2",
        "pg": "^8.13.1",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@repo/eslint-config": "workspace:*",
        "@repo/jest-presets": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/body-parser": "^1.19.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.10.2",
        "@types/pg": "^8.11.10",
        "@types/supertest": "^6.0.2",
        "dotenv-cli": "^8.0.0",
        "drizzle-kit": "^0.30.1",
        "eslint": "catalog:",
        "nodemon": "^3.1.9",
        "supertest": "^7.0.0",
        "tsx": "^4.19.2",
        "typescript": "catalog:",
        "vitest": "^2.1.8"
    }
}
